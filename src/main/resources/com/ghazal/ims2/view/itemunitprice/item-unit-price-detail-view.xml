<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://ItemUnitPriceDetailView.title"
      focusComponent="form">
    <data>
        <instance id="itemUnitPriceDc"
                  class="com.ghazal.ims2.entity.ItemUnitPrice">
            <fetchPlan extends="_base">
                <property name="item" fetchPlan="_base"/>
                <property name="unit" fetchPlan="_base"/>
                <property name="price"/>
                <property name="warehouse" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <formLayout id="form" dataContainer="itemUnitPriceDc">
            <entityPicker id="itemField" property="item" required="true"/>
            <entityPicker id="unitField" property="unit" required="true"/>
            <bigDecimalField id="priceField" property="price" required="true"/>
            <entityPicker id="warehouseField" property="warehouse" required="true"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>